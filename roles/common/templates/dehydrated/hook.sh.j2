#!/bin/sh
{% if ansible_prolog %}
{% from 'templates/ansible/prolog.j2' import prolog with context %}
{{ prolog() }}
{% endif %}

hooks_dir="$(dirname "$(readlink -f "${0}")")/hooks"

if [ -d "${hooks_dir}" ]; then
    find "${hooks_dir}" -type f -executable | \
        while read script ; do
            "${script}" "$@"
        done
fi

exit 0
